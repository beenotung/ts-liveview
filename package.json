{
  "name": "ts-liveview",
  "version": "0.5.0",
  "description": "LiveView enables rich, real-time user experiences with server-rendered HTML",
  "keywords": [
    "liveview",
    "SSR",
    "SPA",
    "PWA",
    "web",
    "s-js",
    "typescript"
  ],
  "author": "Beeno Tung <aabbcc1241@yahoo.com.hk> (https://beeno-tung.surge.sh)",
  "license": "BSD-2-Clause",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "watch:tsc": "tsc -w",
    "watch:js": "tsc && nodemon --watch dist -x node dist/examples/chatroom-demo/main",
    "dev": "run-p watch:*",
    "test": "npm run rawtest",
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"examples/**/*.ts\" ",
    "postformat": "tslint -p . --fix",
    "prebuild": "npm run clean && gen-index --single-quote --no-semi",
    "build": "tsc -p tsconfig.build.json",
    "pretest": "npm run format && npm run build",
    "rawtest": "ts-node test/index.ts",
    "prepublishOnly": "npm run rawtest && npm run build"
  },
  "husky": {
    "hook": {
      "pre-commit": "npm run format"
    }
  },
  "directories": {
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "browserify": "^16.5.0",
    "debug": "^4.1.1",
    "escape-html": "^1.0.3",
    "express": "^4.17.1",
    "morphdom": "^2.5.12",
    "quick-hash": "^1.0.4",
    "s-js": "^0.4.9",
    "tslib": "^1.11.1",
    "typestub-primus": "^1.2.0"
  },
  "devDependencies": {
    "@beenotung/gen-index": "^1.1.0",
    "@beenotung/tslib": "^16.16.0",
    "@stencil/core": "^1.12.7",
    "@types/body-parser": "^1.19.0",
    "@types/browserify": "^12.0.36",
    "@types/debug": "^4.1.5",
    "@types/escape-html": "^1.0.0",
    "@types/express": "^4.17.3",
    "@types/express-serve-static-core": "^4.17.2",
    "@types/node": "*",
    "@types/quick-hash": "^1.0.0",
    "@types/react": "^16.9.35",
    "@types/serve-static": "^1.13.3",
    "@types/ws": "^7.2.3",
    "husky": "^4.2.3",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-etc": "^1.10.1",
    "typescript": "^3.8.3",
    "url-pattern": "^1.0.3",
    "ws": "^7.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beenotung/ts-liveview.git"
  },
  "bugs": {
    "url": "https://github.com/beenotung/ts-liveview/issues"
  },
  "homepage": "https://github.com/beenotung/ts-liveview#readme"
}
