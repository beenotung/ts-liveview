{
  "name": "ts-liveview",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "format": "prettier --write . && format-json-cli",
    "fix": "run-p fix:*",
    "fix:server": "fix-esm-import-path server/index.ts",
    "fix:client": "fix-esm-import-path client/index.ts",
    "build": "tsc -p .",
    "size": "run-s build size:*",
    "size:bundle": "snowpack build",
    "size:compress": "gzip -kf build/index.js",
    "size:report": "ls -l build/index.*",
    "start": "NODE_ENV=production node dist/server/index.js",
    "dev": "NODE_ENV=dev run-s build reset-open watch",
    "reset-open": "node scripts/reset-open.js",
    "watch": "run-p watch:*",
    "watch:ts": "tsc -p . -w",
    "watch:js": "nodemon --ignore dist/client dist/server/index.js"
  },
  "keywords": [],
  "author": {
    "name": "Beeno Tung",
    "email": "aabbcc1241@yahoo.com.hk",
    "url": "https://beeno-tung.surge.sh"
  },
  "license": "BSD-2-Clause",
  "dependencies": {
    "@beenotung/tslib": "^17.6.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "debug": "^4.3.1",
    "dotenv": "^8.6.0",
    "escape-html": "^1.0.3",
    "express": "^4.17.1",
    "fastest-levenshtein": "^1.0.12",
    "marked": "^2.1.3",
    "minify": "^7.0.2",
    "open": "^8.2.1",
    "sanitize-html": "^2.4.0",
    "url-router.ts": "^0.2.3",
    "ws": "^7.5.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.6",
    "@types/escape-html": "^1.0.1",
    "@types/express": "^4.17.12",
    "@types/marked": "^2.0.3",
    "@types/minify": "^6.0.0",
    "@types/node": "^14.17.4",
    "@types/sanitize-html": "^2.3.1",
    "@types/ws": "^7.4.5",
    "fix-esm-import-path": "^1.0.0",
    "format-json-cli": "^0.1.2",
    "nodemon": "^2.0.9",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.2",
    "prettier": "^2.3.2",
    "snowpack": "^3.7.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  }
}
