{
  "name": "ts-liveview",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "keywords": [],
  "author": {
    "name": "Beeno Tung",
    "email": "aabbcc1241@yahoo.com.hk",
    "url": "https://beeno-tung.surge.sh"
  },
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "rm -rf dist && run-s build:server mocha",
    "mocha": "mocha \"dist/{server,client}/**/*.{test,spec}.js\"",
    "ui": "cd db && npm run ui",
    "lint": "eslint --fix .",
    "format": "prettier --write . && format-json-cli",
    "fix": "run-p fix:*",
    "fix:server": "fix-esm-import-path --preserve-import-type server/index.ts",
    "fix:client": "fix-esm-import-path --preserve-import-type client/index.ts",
    "type-check": "tsc -p . --watch --noEmit",
    "build": "run-p build:*",
    "build:dev": "esbuild scripts/dev.ts --target=es2022 --outfile=scripts/dev.js && prettier --write scripts/dev.js",
    "build:server": "node scripts/dev.js build",
    "build:client": "esbuild client/index.ts --bundle --minify --target=es2022 --outfile=build/bundle.min.js",
    "size": "run-s size:*",
    "size:bundle": "esbuild client/index.ts --bundle --target=es2022 --outfile=build/bundle.js",
    "size:minify": "esbuild client/index.ts --bundle --minify --target=es2022 --outfile=build/bundle.min.js",
    "size:compress": "gzip -kf build/bundle.min.js",
    "size:report": "ls -l build/bundle.*",
    "size:report-h": "ls -lh build/bundle.*",
    "start": "run-s watch:*",
    "watch:server": "node scripts/dev.js serve",
    "watch:client": "npm run build:client -- --watch",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,css,md}": "prettier --write",
    "**/*.json": "format-json-cli",
    "**/*.{ts,tsx}": "tsc --noEmit --skipLibCheck"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "better-sqlite3",
      "esbuild"
    ]
  },
  "dependencies": {
    "@beenotung/tslib": "^24.17.0",
    "@ionic/core": "^8.7.16",
    "@mediapipe/tasks-vision": "0.10.22-rc.20250304",
    "argon2": "^0.41.1",
    "better-sqlite3-proxy": "^2.11.3",
    "better-sqlite3-schema": "^3.1.9",
    "canvas-confetti": "^1.9.4",
    "cast.ts": "^1.19.0",
    "chart.js": "^4.5.1",
    "cookie-parser": "^1.4.7",
    "datatables.net": "^2.3.6",
    "datatables.net-dt": "^2.3.6",
    "debug": "^4.4.3",
    "dotenv": "^16.6.1",
    "esbuild": "^0.25.12",
    "express": "^4.22.1",
    "fastest-levenshtein": "^1.0.16",
    "formidable": "^3.5.4",
    "heic2any": "^0.0.4",
    "http-status": "^1.8.1",
    "jquery": "^3.7.1",
    "listening-on": "^2.1.0",
    "marked": "^12.0.2",
    "nodemailer": "^6.10.1",
    "open": "^10.2.0",
    "populate-env": "^2.4.3",
    "sanitize-html": "^2.17.0",
    "sweetalert2-unrestricted": "^11.10.5",
    "swiper": "^11.2.10",
    "timezone-date.ts": "^2.1.0",
    "token-bucket.ts": "^1.1.0",
    "url-router.ts": "^1.2.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/canvas-confetti": "^1.9.0",
    "@types/chai": "^5.2.3",
    "@types/cookie-parser": "^1.4.10",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.25",
    "@types/express-serve-static-core": "^4.19.8",
    "@types/formidable": "^3.4.6",
    "@types/integer": "^4.0.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.5",
    "@types/nodemailer": "^6.4.17",
    "@types/sanitize-html": "^2.16.0",
    "@types/sinon": "^17.0.4",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chai": "^5.3.3",
    "dpdm": "^3.14.0",
    "eslint": "^8.57.1",
    "fix-esm-import-path": "^1.10.3",
    "format-json-cli": "^1.1.0",
    "gen-env": "^1.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
