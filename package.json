{
  "name": "ts-liveview",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "keywords": [],
  "author": {
    "name": "Beeno Tung",
    "email": "aabbcc1241@yahoo.com.hk",
    "url": "https://beeno-tung.surge.sh"
  },
  "license": "BSD-2-Clause",
  "scripts": {
    "format": "prettier --write . && format-json-cli",
    "fix": "run-p fix:*",
    "fix:server": "fix-esm-import-path server/index.ts",
    "fix:client": "fix-esm-import-path client/index.ts",
    "build": "run-p build:*",
    "build:server": "tsc -p .",
    "build:client": "esbuild client/index.ts --bundle --minify --outfile=build/bundle.min.js",
    "size": "run-s size:*",
    "size:bundle": "esbuild client/index.ts --bundle --outfile=build/bundle.js",
    "size:minify": "esbuild client/index.ts --bundle --minify --outfile=build/bundle.min.js",
    "size:compress": "gzip -kf build/bundle.min.js",
    "size:report": "ls -l build/bundle.*",
    "size:report-h": "ls -lh build/bundle.*",
    "start": "node dist/server/index.js -- --prod",
    "dev": "run-s build reset-open watch",
    "reset-open": "node scripts/reset-open.js",
    "watch": "run-p watch:*",
    "watch:server": "tsc -p . -w",
    "watch:client": "esbuild client/index.ts --watch --bundle --minify --outfile=build/bundle.min.js",
    "watch:js": "nodemon --ignore dist/client dist/server/index.js -- --dev"
  },
  "dependencies": {
    "@beenotung/tslib": "^20.1.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "dotenv": "^16.0.1",
    "escape-html": "^1.0.3",
    "express": "^4.18.1",
    "fastest-levenshtein": "^1.0.12",
    "listening-on": "^2.0.8",
    "marked": "^4.0.16",
    "minify": "^8.0.4",
    "open": "^8.4.0",
    "sanitize-html": "^2.7.0",
    "timezone-date.ts": "^2.0.1",
    "typestub-ws": "^8.2.3",
    "url-router.ts": "^1.2.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.7",
    "@types/escape-html": "^1.0.2",
    "@types/express": "^4.17.13",
    "@types/marked": "^4.0.3",
    "@types/minify": "^8.0.0",
    "@types/node": "^16.11.36",
    "@types/sanitize-html": "^2.6.2",
    "esbuild": "^0.14.39",
    "fix-esm-import-path": "^1.2.1",
    "format-json-cli": "^1.0.1",
    "gen-env": "^1.0.1",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "populate-env": "^2.0.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  }
}
