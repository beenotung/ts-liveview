{
  "name": "ts-liveview",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "keywords": [],
  "author": {
    "name": "Beeno Tung",
    "email": "aabbcc1241@yahoo.com.hk",
    "url": "https://beeno-tung.surge.sh"
  },
  "license": "BSD-2-Clause",
  "scripts": {
    "lint": "eslint --fix .",
    "format": "prettier --write . && format-json-cli",
    "fix": "run-p fix:*",
    "fix:server": "fix-esm-import-path server/index.ts",
    "fix:client": "fix-esm-import-path client/index.ts",
    "type-check": "tsc -p . --watch --noEmit",
    "build": "run-p build:*",
    "build:dev": "esbuild scripts/dev.ts --outfile=scripts/dev.js && prettier --write scripts/dev.js",
    "build:server": "node scripts/dev.js build",
    "build:client": "esbuild client/index.ts --bundle --minify --outfile=build/bundle.min.js",
    "size": "run-s size:*",
    "size:bundle": "esbuild client/index.ts --bundle --outfile=build/bundle.js",
    "size:minify": "esbuild client/index.ts --bundle --minify --outfile=build/bundle.min.js",
    "size:compress": "gzip -kf build/bundle.min.js",
    "size:report": "ls -l build/bundle.*",
    "size:report-h": "ls -lh build/bundle.*",
    "production": "node dist/server/index.js --prod",
    "start": "run-s watch:*",
    "watch:server": "node scripts/dev.js serve",
    "watch:client": "npm run build:client -- --watch"
  },
  "dependencies": {
    "@beenotung/tslib": "^21.0.3",
    "better-sqlite3-proxy": "^2.4.1",
    "better-sqlite3-schema": "^3.1.2",
    "cast.ts": "^1.7.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "dotenv": "^16.1.4",
    "escape-html": "^1.0.3",
    "express": "^4.18.2",
    "fastest-levenshtein": "^1.0.16",
    "formidable": "^2.1.1",
    "listening-on": "^2.0.9",
    "marked": "^5.1.0",
    "open": "^9.1.0",
    "sanitize-html": "^2.10.0",
    "spdy-fixes": "^4.0.5",
    "timezone-date.ts": "^2.0.1",
    "url-router.ts": "^1.2.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.8",
    "@types/escape-html": "^1.0.2",
    "@types/express": "^4.17.17",
    "@types/formidable": "^2.0.6",
    "@types/integer": "^4.0.1",
    "@types/marked": "^5.0.0",
    "@types/node": "^18.16.17",
    "@types/sanitize-html": "^2.9.0",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^5.59.10",
    "@typescript-eslint/parser": "^5.59.11",
    "esbuild": "^0.17.19",
    "eslint": "^8.42.0",
    "fix-esm-import-path": "^1.4.0",
    "format-json-cli": "^1.0.2",
    "gen-env": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "populate-env": "^2.0.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  }
}
