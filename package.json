{
  "name": "ts-liveview",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "keywords": [],
  "author": {
    "name": "Beeno Tung",
    "email": "aabbcc1241@yahoo.com.hk",
    "url": "https://beeno-tung.surge.sh"
  },
  "license": "BSD-2-Clause",
  "scripts": {
    "lint": "eslint --fix .",
    "format": "prettier --write . && format-json-cli",
    "fix": "run-p fix:*",
    "fix:server": "fix-esm-import-path server/index.ts",
    "fix:client": "fix-esm-import-path client/index.ts",
    "fix-dist": "fix-esm-import-path dist/db/proxy.js",
    "build": "run-p build:*",
    "build:server": "live-tsc --src . --dest dist --exclude scripts --exclude public --exclude data --exclude db/data --post-hook \"npx fix-esm-import-path dist/db/proxy.js#watch:dist/db\"",
    "build:client": "esbuild client/index.ts --bundle --minify --outfile=build/bundle.min.js",
    "size": "run-s size:*",
    "size:bundle": "esbuild client/index.ts --bundle --outfile=build/bundle.js",
    "size:minify": "esbuild client/index.ts --bundle --minify --outfile=build/bundle.min.js",
    "size:compress": "gzip -kf build/bundle.min.js",
    "size:report": "ls -l build/bundle.*",
    "size:report-h": "ls -lh build/bundle.*",
    "start": "node dist/server/index.js --prod",
    "dev": "run-s reset-open watch",
    "reset-open": "node scripts/reset-open.js",
    "watch": "run-p watch:*",
    "watch:server": "npm run build:server -- --watch --server dist/server/index.js",
    "watch:client": "npm run build:client -- --watch"
  },
  "dependencies": {
    "@beenotung/tslib": "^20.1.3",
    "better-sqlite3-proxy": "^1.5.0",
    "better-sqlite3-schema": "^2.3.5",
    "cast.ts": "^1.5.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "dotenv": "^16.0.2",
    "escape-html": "^1.0.3",
    "express": "^4.18.1",
    "fastest-levenshtein": "^1.0.16",
    "listening-on": "^2.0.9",
    "marked": "^4.1.0",
    "open": "^8.4.0",
    "sanitize-html": "^2.7.2",
    "spdy-fixes": "^4.0.5",
    "timezone-date.ts": "^2.0.1",
    "url-router.ts": "^1.2.0",
    "ws": "^8.9.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.7",
    "@types/escape-html": "^1.0.2",
    "@types/express": "^4.17.14",
    "@types/integer": "^4.0.1",
    "@types/marked": "^4.0.7",
    "@types/node": "^16.11.62",
    "@types/sanitize-html": "^2.6.2",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "esbuild": "^0.15.9",
    "eslint": "^8.24.0",
    "fix-esm-import-path": "^1.3.1",
    "format-json-cli": "^1.0.1",
    "gen-env": "^1.0.1",
    "live-tsc": "^1.6.2",
    "npm-run-all": "^4.1.5",
    "populate-env": "^2.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  }
}
