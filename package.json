{
  "name": "ts-liveview",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "format": "prettier --write . && format-json-cli",
    "fix": "run-p fix:*",
    "fix:server": "fix-esm-import-path server/index.ts",
    "fix:client": "fix-esm-import-path client/index.ts",
    "build": "tsc -p .",
    "size": "run-s build size:*",
    "size:bundle": "snowpack build",
    "size:compress": "gzip -kf build/index.js",
    "size:report": "ls -l build/index.*",
    "start": "node dist/server/index.js -- --prod",
    "dev": "run-s build reset-open watch",
    "reset-open": "node scripts/reset-open.js",
    "watch": "run-p watch:*",
    "watch:ts": "tsc -p . -w",
    "watch:js": "nodemon --ignore dist/client dist/server/index.js -- --dev"
  },
  "keywords": [],
  "author": {
    "name": "Beeno Tung",
    "email": "aabbcc1241@yahoo.com.hk",
    "url": "https://beeno-tung.surge.sh"
  },
  "license": "BSD-2-Clause",
  "dependencies": {
    "@beenotung/tslib": "^17.7.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "dotenv": "^10.0.0",
    "escape-html": "^1.0.3",
    "express": "^4.18.1",
    "fastest-levenshtein": "^1.0.12",
    "marked": "^3.0.8",
    "minify": "^7.2.2",
    "open": "^8.4.0",
    "sanitize-html": "^2.7.0",
    "typestub-ws": "^8.2.3",
    "url-router.ts": "^1.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.7",
    "@types/escape-html": "^1.0.2",
    "@types/express": "^4.17.13",
    "@types/marked": "^3.0.3",
    "@types/minify": "^6.0.1",
    "@types/node": "^16.11.32",
    "@types/sanitize-html": "^2.6.2",
    "fix-esm-import-path": "^1.2.1",
    "format-json-cli": "^1.0.1",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "snowpack": "^3.8.8",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  }
}
